@model IEnumerable<Agenda.Models.Contacto>

@{
    ViewData["Title"] = "Inicio";
}

<h1>Agenda Personal</h1>


<button type="button" class="btn btn-outline-dark"> <a  style="text-decoration:none; color:slategrey;"  asp-action="Create">Crear nuevo contacto</a></button>

<form style="margin:15px" asp-controller="Contactos" asp-action="Index" method="get">
    
        Nombre: <input type="text" name="SearchString" />
        <input type="submit" value="Filtrar" />
    
</form>

<table class="table table-striped table-hover">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Nombre)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Apellido)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Numero)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Email)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Web)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Nombre)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Apellido)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Numero)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Email)
            </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Web)
                </td>
            <td>
                <a style="text-decoration:none; color:slategrey; font-weight:bolder" asp-action="Edit" asp-route-id="@item.Id">Editar</a> |
                 <a style="text-decoration:none; color:slategrey; font-weight:bolder" asp-action="Details" asp-route-id="@item.Id">Detalles</a> |
                 <a style="text-decoration:none; color:slategrey; font-weight:bolder" asp-action="Delete" asp-route-id="@item.Id">Eliminar</a>
            </td>
        </tr>
}
    </tbody>
</table>
